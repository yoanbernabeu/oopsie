---
interface Props {
  variant?: 'transparent' | 'solid';
}

const { variant = 'solid' } = Astro.props;
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';

const navLinks = [
  { href: '/oopsie/docs/getting-started', label: 'Docs' },
  { href: '/oopsie/docs/sdk/installation', label: 'SDK' },
  { href: '/oopsie/docs/server/configuration', label: 'Server' },
];
---

<header
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-300',
    variant === 'transparent'
      ? 'header-transparent'
      : 'bg-surface-0/80 backdrop-blur-xl border-b border-surface-3/50',
  ]}
  id="site-header"
>
  <div class="max-w-7xl mx-auto px-6 lg:px-10 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="/oopsie/" class="flex items-center gap-2.5 group">
      <span class="text-xl transition-transform duration-300 group-hover:rotate-12 inline-block">&#x1F41B;</span>
      <span class="font-display text-lg font-bold text-zinc-100">Oopsie</span>
      <span class="hidden sm:inline-flex items-center px-2 py-0.5 rounded-md bg-coral-100 text-coral text-[10px] font-mono font-medium tracking-wide ml-1">
        OSS
      </span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-1">
      {navLinks.map((link) => {
        const isActive = currentPath.startsWith(link.href.split('/').slice(0, 3).join('/'));
        return (
          <a
            href={link.href}
            class:list={[
              'px-3 py-1.5 rounded-lg text-sm transition-colors duration-200',
              isActive
                ? 'text-zinc-100 bg-surface-3/40'
                : 'text-zinc-500 hover:text-zinc-300 hover:bg-surface-3/20',
            ]}
          >
            {link.label}
          </a>
        );
      })}
    </nav>

    <!-- Right actions -->
    <div class="flex items-center gap-3">
      <!-- GitHub -->
      <a
        href="https://github.com/yoanbernabeu/oopsie"
        target="_blank"
        rel="noopener"
        class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm text-zinc-500 hover:text-zinc-300 hover:bg-surface-3/20 transition-colors duration-200"
      >
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" class="opacity-70">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
        </svg>
        <span class="hidden sm:inline">GitHub</span>
      </a>

      <!-- CTA -->
      <a
        href="/oopsie/docs/getting-started"
        class="hidden sm:inline-flex items-center gap-1.5 px-4 py-1.5 rounded-lg bg-coral text-white text-sm font-medium hover:bg-coral-dark transition-colors duration-200"
      >
        Get Started
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  if (header?.classList.contains('header-transparent')) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 20) {
        header.classList.add('header-scrolled');
        header.classList.remove('header-transparent');
      } else {
        header.classList.remove('header-scrolled');
        header.classList.add('header-transparent');
      }
    });
  }
</script>
